<android.support.v4.widget.SwipeRefreshLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/swipe_refresh_container"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context="ru.artroman.weatherapp.activity.StartActivity.MainContentFragment">

	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:fillViewport="false">

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				android:paddingRight="@dimen/activity_horizontal_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				android:paddingBottom="@dimen/activity_vertical_margin"
				android:background="@drawable/bg_gradient"
				android:orientation="vertical">

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="20dp"
					android:layout_gravity="center"
					android:orientation="horizontal">

				<TextView
						android:id="@+id/main_temp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="50sp"
						android:layout_gravity="center_vertical"
						android:paddingRight="10dp"
						android:text="+1°"/>

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						android:gravity="center">

					<TextView
							android:id="@+id/main_city_name"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="25sp"
							android:text="Санкт-Петербург"/>

					<TextView
							android:id="@+id/main_date"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingTop="5dp"
							android:text="1 апреля 2014"/>

					<TextView
							android:id="@+id/main_day_of_week"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Вторник"/>

				</LinearLayout>
			</LinearLayout>

			<TextView
					android:id="@+id/main_weather_status"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingTop="20dp"
					android:textSize="17sp"
					android:gravity="center"
					android:text="Облачно, небольшой снег"/>

			<TableLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingTop="20dp">
				<TableRow>
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							style="@style/CenterBigger"
							android:text="Ветер:"/>

					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							style="@style/CenterBigger"
							android:text="Влажность:"/>

					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							style="@style/CenterBigger"
							android:text="Давление:"/>
				</TableRow>
				<TableRow>
					<TextView
							android:id="@+id/main_wind"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							style="@style/CenterByWidth"
							android:text="%d м/с"/>

					<TextView
							android:id="@+id/main_humidity"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							style="@style/CenterByWidth"
							android:text="%d%"/>

					<TextView
							android:id="@+id/main_pressure"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							style="@style/CenterByWidth"
							android:text="%d мм рт.ст."/>
				</TableRow>
			</TableLayout>

			<View
					android:layout_height="1dp"
					android:layout_width="match_parent"
					android:layout_marginTop="20dp"
					android:background="#888"/>

			<TableLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingTop="20dp"
					android:orientation="vertical">
				<TableRow
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">
					<TextView
							android:id="@+id/main_text_daypart1_title"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							style="@style/DayPeriodsTitle"
							android:text="Ночь"/>
					<TextView
							android:id="@+id/main_text_daypart2_title"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							style="@style/DayPeriodsTitle"
							android:text="Утро"/>
					<TextView
							android:id="@+id/main_text_daypart3_title"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							style="@style/DayPeriodsTitle"
							android:text="День"/>
					<TextView
							android:id="@+id/main_text_daypart4_title"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							style="@style/DayPeriodsTitle"
							android:text="Вечер"/>
				</TableRow>
				<TableRow
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingTop="10dp"
						android:orientation="horizontal">
					<TextView
							android:id="@+id/main_text_daypart1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							style="@style/DayPeriodsContent"
							android:text="-5°"/>
					<TextView
							android:id="@+id/main_text_daypart2"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							style="@style/DayPeriodsContent"
							android:text="0°"/>
					<TextView
							android:id="@+id/main_text_daypart3"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							style="@style/DayPeriodsContent"
							android:text="+2°"/>
					<TextView
							android:id="@+id/main_text_daypart4"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							style="@style/DayPeriodsContent"
							android:text="+1°"/>
				</TableRow>

			</TableLayout>

			<View
					android:layout_height="1dp"
					android:layout_width="match_parent"
					android:layout_marginTop="20dp"
					android:background="#888"/>

		</LinearLayout>
	</ScrollView>

</android.support.v4.widget.SwipeRefreshLayout>
